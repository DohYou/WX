<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/grayF5F5F5">

        <include
            layout="@layout/title_layout"/>

        <FrameLayout
            android:paddingLeft="15dp"
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:id="@+id/fl_me_setting_safety_forget_password1"
            android:background="@color/all_activity_FFFFFF">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="手机号"
                android:textSize="@dimen/text_size_15"
                android:gravity="center_vertical"/>
            <EditText
                android:layout_marginLeft="100dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="请输入手机号"
                android:textSize="@dimen/text_size_15"/>
        </FrameLayout>
        <View
            android:background="@color/grayE0E0E0"
            android:layout_width="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_height="@dimen/line_height"/>

        <FrameLayout
            android:paddingLeft="15dp"
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:id="@+id/fl_me_setting_safety_forget_password2"
            android:background="@color/all_activity_FFFFFF">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="验证码"
                android:textSize="@dimen/text_size_15"
                android:gravity="center_vertical"/>
            <EditText
                android:layout_marginLeft="100dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="请输入验证码"
                android:textSize="@dimen/text_size_15"/>

            <RelativeLayout
                android:layout_width="75dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical|right"
                android:layout_marginRight="15dp"
                android:id="@+id/rl_me_setting_safety_forgetpassword_getcode">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="@color/green0ABE63"
                    android:text="获取验证码"
                    android:layout_centerInParent="true"/>

            </RelativeLayout>
        </FrameLayout>
        <View
            android:background="@color/grayE0E0E0"
            android:layout_width="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_height="@dimen/line_height"/>

        <FrameLayout
            android:paddingLeft="15dp"
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:id="@+id/fl_me_setting_safety_forget_password3"
            android:background="@color/all_activity_FFFFFF">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="新密码"
                android:textSize="@dimen/text_size_15"
                android:gravity="center_vertical"/>
            <EditText
                android:layout_marginLeft="100dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="请输入新密码"
                android:textSize="@dimen/text_size_15"/>
        </FrameLayout>
        <View
            android:background="@color/grayE0E0E0"
            android:layout_width="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_height="@dimen/line_height"/>

        <FrameLayout
            android:paddingLeft="15dp"
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:id="@+id/fl_me_setting_safety_forget_password4"
            android:background="@color/all_activity_FFFFFF">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="确认密码"
                android:textSize="@dimen/text_size_15"
                android:gravity="center_vertical"/>
            <EditText
                android:layout_marginLeft="100dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="再次填写输入"
                android:textSize="@dimen/text_size_15"/>
        </FrameLayout>
        <View
            android:background="@color/grayE0E0E0"
            android:layout_width="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_height="@dimen/line_height"/>

</LinearLayout>