<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/all_activity_FFFFFF"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:overScrollMode="never"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="92dp"
            android:elevation="4dp"
            android:layout_height="92dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="75dp"
            android:background="@drawable/re_solid_r6_white"/>
        <FrameLayout
            android:layout_marginTop="81.5dp"
            android:layout_marginLeft="54dp"
            android:layout_marginRight="54dp"
            android:layout_width="match_parent"
            android:layout_height="60dp">
            <ImageView
                android:layout_gravity="center_vertical"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/login_phone"
                android:id="@+id/login_phone"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="请输入手机号"
                android:theme="@style/InputEditText"
                android:inputType="number"
                android:textColor="@color/black333333"
                android:id="@+id/et_login_phone"
                android:textSize="@dimen/text_size_14"
                android:paddingLeft="30dp"/>
        </FrameLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:id="@+id/fl_login_password"
            android:layout_marginLeft="54dp"
            android:layout_marginRight="54dp">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/login_password" />
            <com.ylr.hyy.utils.InputEditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="请输入密码"
                android:id="@+id/iet_login_password"
                android:textColor="@color/black333333"
                android:paddingLeft="30dp"
                android:maxLength="12"
                android:inputType="number"
                android:theme="@style/InputEditText"
                android:digits="0123456789qwertyuioplkjhgfdsazxcvbnm"
                android:textSize="@dimen/text_size_14"/>
        </FrameLayout>
        <FrameLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/fl_login_code"
            android:layout_marginLeft="54dp"
            android:layout_marginRight="54dp"
            android:layout_marginTop="20dp">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/login_code"
                android:layout_gravity="center_vertical"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="请输入验证码"
                android:textColor="@color/black333333"
                android:paddingLeft="30dp"
                android:maxLength="8"
                android:id="@+id/et_login_code"
                android:textSize="@dimen/text_size_14"
                android:inputType="number"
                android:theme="@style/InputEditText"/>
            <TextView
                android:layout_gravity="right"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:textSize="@dimen/text_size_14"
                android:textColor="@color/green0ABE63"
                android:id="@+id/tv_login_get_code"
                android:gravity="center"
                android:text="获取验证码"/>
        </FrameLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="54dp"
            android:layout_marginRight="54dp"
            android:layout_height="60dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="@dimen/text_size_14"
                android:textColor="@color/grayB3B3B3"
                android:gravity="center"
                android:text="忘记密码"
                android:id="@+id/tv_forget_password"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="@dimen/text_size_14"
                android:textColor="@color/green0ABE63"
                android:layout_gravity="right"
                android:gravity="center"
                android:text="短信验证码登录"
                android:id="@+id/tv_switch_login_way"/>
        </FrameLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="55dp"
            android:layout_marginRight="55dp"
            android:layout_marginTop="29dp"
            android:background="@drawable/re_solid_r25_gray"
            android:text="登录"
            android:textSize="@dimen/text_size_18"
            android:gravity="center"
            android:id="@+id/tv_login"/>
        <LinearLayout
            android:layout_marginTop="35dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_height="40dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:textSize="@dimen/text_size_12"
                android:textColor="@color/gray999999"
                android:gravity="center"
                android:text="注册账号  "
                android:id="@+id/tv_register_account"/>
            <TextView
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:textSize="@dimen/text_size_12"
                android:textColor="@color/gray999999"
                android:text="|  更多选项"
                android:id="@+id/tv_more"/>
        </LinearLayout>
        <FrameLayout
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="60dp">

            <CheckBox
                android:id="@+id/check_is_agree_treaty"
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/login_type_check"
                android:button="@null" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="@dimen/text_size_12"
                android:textColor="@color/gray999999"
                android:text="登录即代表您已同意《用户协议》与《隐私协议》"
                android:layout_marginLeft="20dp"
                android:gravity="center_vertical"
                android:id="@+id/tv_login_treaty"/>
        </FrameLayout>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>