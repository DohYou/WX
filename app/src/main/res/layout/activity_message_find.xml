<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/grayF5F5F5"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <FrameLayout
        android:layout_width="match_parent"
        android:background="@color/grayF5F5F5"
        android:layout_height="44dp"
        android:layout_marginTop="10dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@drawable/re_solid_r20_white"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="48dp">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:background="@drawable/message_find_gray"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="18dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:hint="搜索"
                android:textSize="@dimen/text_size_13"
                android:textColor="@color/grayBFBFBF"
                android:layout_marginLeft="50dp"/>
        </FrameLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/blue5D6F94"
            android:layout_gravity="right|center_vertical"
            android:textSize="@dimen/text_size_15"
            android:text="取消"
            android:layout_marginRight="11dp"
            android:gravity="center"
            android:id="@+id/message_find_cancel"/>

    </FrameLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_13"
        android:textColor="@color/grayB3B3B3"
        android:text="搜索指定内容"
        android:gravity="center"
        android:layout_marginTop="14dp"/>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="21dp"
        android:layout_marginTop="35dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="@dimen/text_size_15"
            android:textColor="@color/blue5D6F94"
            android:text="好友"
            android:gravity="center"
            android:id="@+id/tv_msg_find_friend"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="@dimen/text_size_15"
            android:id="@+id/tv_msg_find_customer"
            android:textColor="@color/blue5D6F94"
            android:text="客户"
            android:gravity="center"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="@dimen/text_size_15"
            android:id="@+id/tv_msg_find_qpeople"
            android:textColor="@color/blue5D6F94"
            android:text="群聊"
            android:gravity="center"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="21dp"
        android:layout_marginTop="25dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="@dimen/text_size_15"
            android:textColor="@color/blue5D6F94"
            android:text="聊天记录"
            android:id="@+id/tv_msg_find_talk"
            android:gravity="center"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="@dimen/text_size_15"
            android:id="@+id/tv_msg_find_friendq"
            android:textColor="@color/blue5D6F94"
            android:text="好友圈"
            android:gravity="center"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/tv_msg_find_customerq"
            android:textSize="@dimen/text_size_15"
            android:textColor="@color/blue5D6F94"
            android:text="客户圈"
            android:gravity="center"/>

    </LinearLayout>
</LinearLayout>