<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/grayF5F5F5"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/all_activity_FFFFFF">

        <ImageView
            android:layout_width="44dp"
            android:layout_height="match_parent"
            android:padding="12dp"
            android:src="@drawable/turn_left"
            android:layout_gravity="center_vertical"
            android:id="@+id/iv_aihelper_finder_return"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_17"
            android:textColor="@color/black333333"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="AI助手"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_15"
            android:textColor="@color/blue5D6F94"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:text="使用说明"
            android:layout_marginRight="6dp"
            android:id="@+id/tv_aihelper_use"/>
    </RelativeLayout>
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:background="@color/all_activity_FFFFFF"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_15"
            android:textColor="@color/black333333"
            android:gravity="center_vertical"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:text="AI助手"/>
        
        <ImageView
            android:layout_width="35dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="13dp"
            android:background="@drawable/lockblue"
            android:layout_centerVertical="true"
            android:id="@+id/iv_aihelper_turnon">
        </ImageView>
    </RelativeLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:overScrollMode="never"
            android:id="@+id/rv_ai_finder">

        </androidx.recyclerview.widget.RecyclerView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:background="@color/all_activity_FFFFFF">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="@dimen/text_size_17"
            android:textColor="#B3B2B2"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="好友圈"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_height"
            android:background="@color/grayF5F5F5"
            android:layout_marginLeft="15dp"
            android:layout_alignParentBottom="true"/>

        <ImageView
            android:layout_width="10dp"
            android:layout_height="5dp"
            android:background="@drawable/downsmaller"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="17dp"
            android:id="@+id/iv_choosefriendorcustomer"/>

    </RelativeLayout>

    <include
        layout="@layout/refresh"/>


</LinearLayout>