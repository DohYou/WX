<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginBottom="60dp"
    android:orientation="vertical"
    android:background="@color/grayF5F5F5">
    <include
        layout="@layout/title_layout"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="132dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/re_solid_r6_purple">
        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5000.50"
        android:textColor="@color/all_activity_FFFFFF"
        android:layout_marginTop="27dp"
        android:layout_marginLeft="27dp"
        android:textSize="@dimen/text_size_25"
        android:id="@+id/tv_balance"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="账户余额(元）"
            android:layout_marginLeft="27dp"
            android:textColor="@color/all_activity_FFFFFF"
            android:layout_below="@id/tv_balance"
            android:layout_marginTop="12dp"
            android:textSize="@dimen/text_size_15"
            android:id="@+id/tv_account_balance"/>
        <ImageView
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:background="@drawable/see_detail"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:id="@+id/iv_see_details"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:layout_height="265dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/re_solid_r6_white">
        <com.ylr.hyy.utils.ItemViewGroup
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:id="@+id/fragment_coins_me1"
            android:background="@color/all_activity_FFFFFF"/>
        <View
            android:layout_width="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_height="0.5dp"
            android:background="@color/grayF2F2F2"/>
        <com.ylr.hyy.utils.ItemViewGroup
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:id="@+id/fragment_coins_me2"
            android:background="@color/all_activity_FFFFFF"/>
        <View
            android:layout_width="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_height="0.5dp"
            android:background="@color/grayF2F2F2"/>
        <com.ylr.hyy.utils.ItemViewGroup
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:id="@+id/fragment_coins_me3"
            android:background="@color/all_activity_FFFFFF"/>
        <View
            android:layout_width="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_height="0.5dp"
            android:background="@color/grayF2F2F2"/>
        <com.ylr.hyy.utils.ItemViewGroup
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:id="@+id/fragment_coins_me4"
            android:background="@color/all_activity_FFFFFF"/>
        <View
            android:layout_width="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_height="0.5dp"
            android:background="@color/grayF2F2F2"/>
        <com.ylr.hyy.utils.ItemViewGroup
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:id="@+id/fragment_coins_me5"
            android:background="@color/all_activity_FFFFFF"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_12"
                android:textColor="@color/gray999999"
                android:text="用户服务协议"
                android:id="@+id/tv_coins_treaty"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:layout_marginTop="120dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_12"
                android:textColor="@color/gray999999"
                android:text="隐私协议"
                android:layout_marginTop="5dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/tv_coins_treaty"
                android:id="@+id/tv_coins_secret"/>
    </RelativeLayout>

</LinearLayout>