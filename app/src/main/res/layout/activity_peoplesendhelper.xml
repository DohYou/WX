<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/grayF5F5F5"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/all_activity_FFFFFF">

        <ImageView
            android:layout_width="44dp"
            android:layout_height="match_parent"
            android:src="@drawable/turn_left"
            android:padding="12dp"
            android:id="@+id/iv_peoplesend_back"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/black333333"
            android:textSize="@dimen/text_size_17"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:text="群发助手"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:textSize="@dimen/text_size_15"
            android:textColor="@color/blue5D6F94"
            android:text="使用说明"
            android:id="@+id/tv_peoplesend_instruction"
            android:layout_marginRight="6dp"/>

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:textColor="@color/grayB3B3B3"
        android:textSize="@dimen/text_size_11"
        android:text="今天 11:12"
        android:gravity="center"
        android:layout_marginTop="10dp"/>
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="160dp"
        android:background="@color/all_activity_FFFFFF"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:id="@+id/rl_peoplesend1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_11"
                android:textColor="@color/grayB3B3B3"
                android:text="18位收件人"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="13dp"
                android:id="@+id/tv_peoplesend_receiver"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_11"
                android:textColor="@color/grayB3B3B3"
                android:text="派大星，海绵宝宝，婴儿肥，章鱼哥，大哥，易烊千玺"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:layout_below="@id/tv_peoplesend_receiver"/>
            
            <ImageView
                android:layout_width="5dp"
                android:layout_height="10dp"
                android:background="@drawable/turn_right_smaller"
                android:layout_alignParentRight="true"
                android:layout_marginRight="21dp"
                android:layout_marginTop="11dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_height"
                android:background="@color/grayF2F2F2"
                android:layout_alignParentBottom="true"/>
            
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="21dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="21dp"
            android:textColor="#011933"
            android:text="祝大家端午节快乐！！！"
            android:id="@+id/tv__peoplesend_talk"
            android:layout_below="@id/rl_peoplesend1"/>
        
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@id/tv__peoplesend_talk"
            android:layout_marginTop="30dp">
            <TextView
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:textColor="@color/all_activity_FFFFFF"
                android:textSize="@dimen/text_size_15"
                android:text="再发一条"
                android:background="@drawable/re_solid_r3_purple"
                android:gravity="center"
                android:id="@+id/tv_send_again"
                android:layout_gravity="center"/>
        </FrameLayout>

    </RelativeLayout>
    
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="bottom"
        android:id="@+id/tv_peoplesendhelper_new"
        android:textSize="@dimen/text_size_16"
        android:textColor="@color/all_activity_FFFFFF"
        android:background="@color/green0ABE63"
        android:text="新建群发"
        android:gravity="center"
        android:layout_marginTop="20dp"/>
    
</LinearLayout>