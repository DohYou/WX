<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/all_activity_FFFFFF"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <include
        layout="@layout/title_layout"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:textColor="@color/black333333"
        android:textSize="@dimen/text_size_18"
        android:text="确认密码"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="75dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:textColor="@color/grayB3B3B3"
        android:textSize="@dimen/text_size_14"
        android:layout_gravity="center_horizontal"
        android:text="请重复输入"
        android:layout_marginTop="7dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="100dp"
        android:id="@+id/ll_intercept_event"
        android:layout_height="50dp">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/inputsixpassword"
            android:id="@+id/iv_input_content1"/>

        <View
            android:layout_width="10dp"
            android:layout_height="match_parent"/>

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/inputsixpassword"
            android:id="@+id/iv_input_content2"/>

        <View
            android:layout_width="10dp"
            android:layout_height="match_parent"/>

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/inputsixpassword"
            android:id="@+id/iv_input_content3"/>

        <View
            android:layout_width="10dp"
            android:layout_height="match_parent"/>

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/inputsixpassword"
            android:id="@+id/iv_input_content4"/>

        <View
            android:layout_width="10dp"
            android:layout_height="match_parent"/>

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/inputsixpassword"
            android:id="@+id/iv_input_content5"/>

        <View
            android:layout_width="10dp"
            android:layout_height="match_parent"/>
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/inputsixpassword"
            android:id="@+id/iv_input_content6"/>

        <View
            android:layout_width="10dp"
            android:layout_height="match_parent"/>

    </LinearLayout>

    <View
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:layout_weight="1"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="28dp"
        android:layout_marginRight="28dp"
        android:layout_marginBottom="200dp"
        android:background="@drawable/re_solid_r25_purple"
        android:text="完成"
        android:textSize="@dimen/text_size_18"
        android:gravity="center"
        android:id="@+id/tv_forget_sure_password_complete"/>
</LinearLayout>