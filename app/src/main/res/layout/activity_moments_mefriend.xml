<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/grayF5F5F5"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/black333333">
        <ImageView
            android:layout_width="44dp"
            android:layout_height="match_parent"
            android:src="@drawable/turn_left_white"
            android:padding="12dp"
            android:id="@+id/iv_title_return"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_17"
            android:layout_gravity="center"
            android:textColor="@color/all_activity_FFFFFF"
            android:text="朋友圈"
            android:gravity="center"
            android:id="@+id/tv_title_name"/>

        <ImageView
            android:layout_width="23dp"
            android:layout_height="18dp"
            android:background="@drawable/takephotopyq"
            android:layout_gravity="center_vertical|right"
            android:id="@+id/iv_friendqme_sendpyq"
            android:layout_marginRight="11dp"/>

    </FrameLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="44dp">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="161dp"
                android:background="@color/black333333">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/re_solid_r37_white"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="17dp"
                    android:layout_marginLeft="15dp"
                    android:id="@+id/iv_friendmomentsme_header"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_size_19"
                        android:textColor="@color/all_activity_FFFFFF"
                        android:gravity="center"
                        android:text="赫敏格兰杰"
                        android:layout_marginLeft="90dp"
                        android:id="@+id/tv_friendmomentsme_name"
                        android:layout_marginTop="84dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_size_14"
                        android:text="签名签名签名签名签名~"
                        android:textColor="@color/all_activity_FFFFFF"
                        android:id="@+id/tv_friendmomentsme_sign"
                        android:layout_below="@id/tv_friendmomentsme_name"
                        android:layout_marginLeft="90dp"
                        android:layout_marginTop="13dp"/>

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:background="@drawable/female"
                        android:layout_marginTop="90dp"
                        android:layout_toRightOf="@+id/tv_friendmomentsme_name"
                        android:layout_marginLeft="11dp"
                        android:id="@+id/iv_friendmomentsme_sex"/>

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="22dp"
                        android:background="@drawable/changedmember1"
                        android:layout_toRightOf="@id/iv_friendmomentsme_sex"
                        android:layout_marginTop="85dp"
                        android:layout_marginLeft="10dp"
                        android:id="@+id/iv_friendmomentsme_memberlevel"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_size_11"
                        android:textColor="@color/blue81CBFF"
                        android:layout_toRightOf="@id/iv_friendmomentsme_memberlevel"
                        android:layout_marginTop="90dp"
                        android:text="普通用户"
                        android:layout_marginLeft="5dp"
                        android:id="@+id/tv_friendmomentsme_membertext"/>


                </RelativeLayout>

            </FrameLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_friendme"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </androidx.recyclerview.widget.RecyclerView>

        </LinearLayout>

</FrameLayout>