<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_marginBottom="60dp"
        android:orientation="vertical"
        android:background="@color/grayF5F5F5">

        <RelativeLayout
            android:paddingTop="40dp"
            android:paddingBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:id="@+id/rl_fragment_me_header_personal"
            android:background="@color/all_activity_FFFFFF">

            <com.ylr.hyy.utils.RoundImageView
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                app:round_topRight="8dp"
                app:round_topLeft="8dp"
                app:round_bottomRight="8dp"
                app:round_bottomLeft="8dp"
                app:round_type="1"
                android:id="@+id/riv_me_head"/>

            <TextView
                android:id="@+id/tv_me_name"
                android:maxLength="8"
                android:ellipsize="end"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@id/riv_me_head"
                android:textColor="@color/black333333"
                android:textSize="@dimen/text_size_19"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="@dimen/text_size_13"
                android:id="@+id/tv_me_id"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@id/riv_me_head"
                android:gravity="center_vertical"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_13"
                android:id="@+id/me_tv_huiji"
                android:layout_marginLeft="15dp"
                android:maxLength="15"
                android:ellipsize="end"
                android:layout_toRightOf="@id/riv_me_head"
                android:layout_alignParentBottom="true"
                android:gravity="center" />

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:background="@drawable/female"
                android:layout_toRightOf="@id/tv_me_name"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="5dp"
                android:id="@+id/iv_sex"/>

            <ImageView
                android:layout_width="18dp"
                android:layout_height="22dp"
                android:background="@drawable/changedmember1"
                android:layout_toRightOf="@id/iv_sex"
                android:layout_marginLeft="6dp"
                android:id="@+id/iv_member1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:layout_toRightOf="@id/iv_member1"
                android:id="@+id/tv_vip_lv"
                android:textSize="@dimen/text_size_11"
                android:textColor="@color/blue81CBFF"
                android:text="普通用户"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="1dp"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:paddingRight="15dp"
                android:paddingLeft="40dp">

                <ImageView
                    android:layout_width="13dp"
                    android:layout_alignParentBottom="true"
                    android:layout_height="13dp"
                    android:background="@drawable/two"
                    android:id="@+id/iv_two"/>

                <ImageView
                    android:layout_alignParentBottom="true"
                    android:layout_toRightOf="@+id/iv_two"
                    android:layout_marginLeft="20dp"
                    android:layout_width="6.5dp"
                    android:layout_height="12dp"
                    android:background="@drawable/turn_right"/>

            </RelativeLayout>

        </RelativeLayout>

        <com.ylr.hyy.utils.ItemViewGroup
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/fragment_me1"
            android:layout_marginTop="10dp"
            android:background="@color/all_activity_FFFFFF"/>

        <com.ylr.hyy.utils.ItemViewGroup
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/fragment_me2"
            android:layout_marginTop="10dp"
            android:background="@color/all_activity_FFFFFF"/>

        <View
            android:layout_width="match_parent"
            android:layout_marginLeft="46.5dp"
            android:layout_height="0.5dp"
            android:background="@color/grayfff2f2f2"/>

        <com.ylr.hyy.utils.ItemViewGroup
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/fragment_me3"
            android:background="@color/all_activity_FFFFFF"/>

        <View
            android:layout_width="match_parent"
            android:layout_marginLeft="46.5dp"
            android:layout_height="0.5dp"
            android:background="@color/grayfff2f2f2"/>

        <com.ylr.hyy.utils.ItemViewGroup
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/fragment_me4"
            android:background="@color/all_activity_FFFFFF"/>

        <View
            android:layout_width="match_parent"
            android:layout_marginLeft="46.5dp"
            android:layout_height="0.5dp"
            android:background="@color/grayfff2f2f2"/>

        <com.ylr.hyy.utils.ItemViewGroup
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/fragment_me5"
            android:background="@color/all_activity_FFFFFF"/>

        <View
            android:layout_width="match_parent"
            android:layout_marginLeft="46.5dp"
            android:layout_height="0.5dp"
            android:background="@color/grayfff2f2f2"/>

        <com.ylr.hyy.utils.ItemViewGroup
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/fragment_me6"
            android:background="@color/all_activity_FFFFFF"/>

        <View
            android:layout_width="match_parent"
            android:layout_marginLeft="46.5dp"
            android:layout_height="0.5dp"
            android:background="@color/grayfff2f2f2"/>

        <com.ylr.hyy.utils.ItemViewGroup
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/fragment_me7"
            android:background="@color/all_activity_FFFFFF"/>

        <View
            android:layout_width="match_parent"
            android:layout_marginLeft="46.5dp"
            android:layout_height="0.5dp"
            android:background="@color/grayfff2f2f2"/>

        <com.ylr.hyy.utils.ItemViewGroup
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/fragment_me8"
            android:background="@color/all_activity_FFFFFF"
            android:layout_marginTop="10dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_marginLeft="46.5dp"
            android:layout_height="0.5dp"
            android:background="@color/grayfff2f2f2"/>

        <com.ylr.hyy.utils.ItemViewGroup
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/fragment_me9"
            android:background="@color/all_activity_FFFFFF"/>


    </LinearLayout>

</androidx.core.widget.NestedScrollView>