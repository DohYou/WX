<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/re_solid_r5_black"
    android:layout_width="150dp"
    android:layout_height="156dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="52dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:id="@+id/rl_add_qtalk">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="16dp"
                android:background="@drawable/add_qtalk"
                android:layout_centerVertical="true"
                android:layout_marginLeft="28dp"
                android:id="@+id/iv_add_qtalk"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="@dimen/text_size_15"
                android:text="发起群聊"
                android:layout_toRightOf="@+id/iv_add_qtalk"
                android:gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:textColor="@color/all_activity_FFFFFF"/>

        </RelativeLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:background="@color/grayff606060"
        android:layout_gravity="bottom"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:id="@+id/rl_add_add">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true">
            
            <ImageView
                android:layout_width="19dp"
                android:layout_height="19dp"
                android:background="@drawable/add_add"
                android:layout_centerVertical="true"
                android:layout_marginLeft="27dp"
                android:id="@+id/iv_add_add"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="@dimen/text_size_15"
                android:text="添加好友"
                android:gravity="center_vertical"
                android:layout_toRightOf="@id/iv_add_add"
                android:layout_marginLeft="5dp"
                android:textColor="@color/all_activity_FFFFFF"/>

        </RelativeLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:background="@color/grayff606060"
        android:layout_gravity="bottom"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="52dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:id="@+id/rl_add_scan">
            
            <ImageView
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:background="@drawable/add_scan"
                android:layout_marginLeft="28dp"
                android:layout_centerVertical="true"
                android:id="@+id/iv_add_scan"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="@dimen/text_size_15"
                android:text="扫一扫"
                android:layout_toRightOf="@id/iv_add_scan"
                android:gravity="center_vertical"
                android:textColor="@color/all_activity_FFFFFF"
                android:layout_marginLeft="5dp"/>

        </RelativeLayout>
    </RelativeLayout>



</LinearLayout>