<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/grayF5F5F5">



    <FrameLayout android:background="@color/all_activity_FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        xmlns:android="http://schemas.android.com/apk/res/android">
        <ImageView
            android:layout_width="44dp"
            android:layout_height="match_parent"
            android:src="@drawable/turn_left"
            android:padding="12dp"
            android:id="@+id/iv_title_return"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_18"
            android:layout_gravity="center"
            android:id="@+id/tv_title_name"
            android:text="所在位置"/>

        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:background="@drawable/searchlocation"
            android:layout_gravity="center_vertical|right"
            android:layout_marginRight="20dp"/>



    </FrameLayout>



    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/all_activity_FFFFFF">
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_15"
            android:textColor="@color/black333333"
            android:text="不显示位置"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"/>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/chooselocation"
            android:layout_gravity="center_vertical|right"
            android:layout_marginRight="15dp"/>
        
    </FrameLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/all_activity_FFFFFF">
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_15"
            android:textColor="@color/black333333"
            android:text="美年广场"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="12dp"
            android:id="@+id/tv_location"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_13"
            android:textColor="@color/grayB3B3B3"
            android:text="四川省成都市武侯区天府大道中段8800号"
            android:id="@+id/tv_location_details"
            android:layout_below="@id/tv_location"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="4dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_height"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_alignParentBottom="true"/>

    </RelativeLayout>

</LinearLayout>