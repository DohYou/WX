<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/grayF5F5F5">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/all_activity_FFFFFF">

        <ImageView
            android:layout_width="44dp"
            android:layout_height="match_parent"
            android:src="@drawable/turn_left"
            android:padding="12dp"
            android:id="@+id/iv_changesex_back"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/black333333"
            android:textSize="@dimen/text_size_17"
            android:text="设置性别"
            android:gravity="center"/>

        <TextView
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:textSize="@dimen/text_size_15"
            android:textColor="@color/all_activity_FFFFFF"
            android:background="@drawable/re_solid_r3_purple"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="15dp"
            android:text="保存"
            android:id="@+id/tv_changesex_save"
            android:gravity="center"/>

    </FrameLayout>
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:background="@color/all_activity_FFFFFF"
        android:layout_marginTop="10dp"
        android:id="@+id/rl_changesex_male">
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_15"
            android:textColor="@color/black333333"
            android:text="男"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"
            android:id="@+id/tv_personalsign_male"/>
        
        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:background="@drawable/male"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/tv_personalsign_male"
            android:layout_marginLeft="4dp"/>
        
        <ImageView
            android:layout_width="29dp"
            android:layout_height="29dp"
            android:background="@drawable/cashback"
            android:layout_alignParentRight="true"
            android:layout_marginRight="11dp"
            android:layout_centerVertical="true"
            android:id="@+id/iv_check_male"
            android:visibility="gone"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:background="@color/grayE6E6E6"
        android:layout_marginLeft="15dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:background="@color/all_activity_FFFFFF"
        android:id="@+id/rl_changesex_female">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_15"
            android:textColor="@color/black333333"
            android:text="女"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"
            android:id="@+id/tv_personalsign_female"/>

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:background="@drawable/female"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/tv_personalsign_female"
            android:layout_marginLeft="4dp"/>

        <ImageView
            android:layout_width="29dp"
            android:layout_height="29dp"
            android:background="@drawable/cashback"
            android:layout_alignParentRight="true"
            android:layout_marginRight="11dp"
            android:visibility="gone"
            android:layout_centerVertical="true"
            android:id="@+id/iv_check_female"/>

    </RelativeLayout>

</LinearLayout>