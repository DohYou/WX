<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/all_activity_FFFFFF"
    xmlns:android="http://schemas.android.com/apk/res/android">

<include
layout="@layout/title_layout"/>

<TextView
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:textSize="@dimen/text_size_20"
android:textColor="@color/black333333"
android:text="我在群里的昵称："
android:layout_gravity="center_horizontal|c\"
android:gravity="center"
android:layout_marginTop="44dp"
android:id="@+id/tv_qchangemyname_originname"/>

<TextView
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:textSize="@dimen/text_size_13"
android:textColor="@color/black333333"
android:text="昵称修改后，只会在此群内显示，
群内成员都可以看见。一年只能修改一次"
android:layout_marginLeft="90dp"
android:layout_marginRight="90dp"
android:layout_gravity="center_horizontal|center_vertical"
android:layout_marginTop="12dp"
android:gravity="center"/>

<FrameLayout
android:layout_width="match_parent"
android:layout_marginTop="58dp"
android:layout_height="45dp">

<ImageView
    android:layout_width="32dp"
    android:layout_height="32dp"
    android:background="@color/green0ABE63"
    android:layout_marginLeft="33dp"
    android:id="@+id/iv_qchangename_myheader"
    android:layout_gravity="center_vertical"/>

<FrameLayout
    android:layout_width="253dp"
    android:layout_marginLeft="83dp"
    android:layout_height="45dp"
    android:background="@drawable/re_solid_r5_gray">

    <EditText
        android:layout_width="253dp"
        android:layout_height="45dp"
        android:textSize="@dimen/text_size_15"
        android:textColor="@color/black333333"
        android:maxLength="18"
        android:inputType="number"
        android:digits="0123456789QWERTYUIOPASDFGHJKLZXCVBNMqazwsxcderfvbgtyhnmjuiklop"
        android:layout_marginLeft="16dp"
        android:background="@drawable/re_solid_r5_gray"
        android:id="@+id/et_qchange_myname"/>

    <ImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:background="@drawable/delete_hjnumber"
        android:layout_gravity="center_vertical|right"
        android:layout_marginRight="12dp"
        android:id="@+id/iv_qchangemyname_delete"/>

</FrameLayout>

</FrameLayout>

<TextView
android:layout_width="162dp"
android:layout_height="50dp"
android:layout_gravity="center_horizontal"
android:layout_marginTop="65dp"
android:text="确定"
android:textColor="@color/all_activity_FFFFFF"
android:gravity="center"
android:background="@drawable/re_solid_r3_purple"
android:id="@+id/tv_qchangemyname_sure"/>

    </LinearLayout>