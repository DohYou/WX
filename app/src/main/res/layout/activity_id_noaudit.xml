<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <include
        layout="@layout/title_layout"/>

    <ScrollView
        android:layout_marginTop="44dp"
        android:overScrollMode="never"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:orientation="horizontal"
        android:background="@color/redFFEFED">
        
        <ImageView
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:background="@drawable/check_info1"
            android:layout_gravity="center_vertical|left" 
            android:layout_marginLeft="15dp"/>

        <ImageView
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:background="@drawable/check_info2"
            android:layout_gravity="center_vertical|right"
            android:layout_marginRight="15dp"/>
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_12"
            android:textColor="@color/redFF4B33"
            android:text="请核对信息，审核通过后将不能进行信息的修改"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="35dp"/>
        
    </FrameLayout>

       <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:background="@drawable/aduit_blue"/>

        <FrameLayout
            android:paddingLeft="15dp"
            android:layout_width="match_parent"
            android:layout_marginTop="-25dp"
            android:layout_height="51dp"
            android:background="@drawable/re_solid_r12_white_up"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="姓名"
                android:textSize="@dimen/text_size_15"
                android:gravity="center_vertical"/>
            <EditText
                android:layout_marginLeft="100dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="text"
                android:background="@null"
                android:id="@+id/et_id_name"
                android:gravity="center_vertical"
                android:hint="请输入完整姓名"
                android:textSize="@dimen/text_size_15"/>
        </FrameLayout>
        <View
            android:background="@color/grayE0E0E0"
            android:layout_width="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_height="@dimen/line_height"/>

        <FrameLayout
            android:paddingLeft="15dp"
            android:layout_width="match_parent"
            android:layout_height="51dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="身份证号"
                android:textSize="@dimen/text_size_15"
                android:gravity="center_vertical"/>
            <EditText
                android:layout_marginLeft="100dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:inputType="number"
                android:id="@+id/et_id_card"
                android:gravity="center_vertical"
                android:hint="请输入身份证号"
                android:textSize="@dimen/text_size_15"/>
        </FrameLayout>
        <View
            android:background="@color/grayE0E0E0"
            android:layout_width="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_height="@dimen/line_height"/>

        <FrameLayout
            android:paddingLeft="15dp"
            android:layout_width="match_parent"
            android:layout_height="51dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="银行卡号"
                android:textSize="@dimen/text_size_15"
                android:gravity="center_vertical"/>
            <EditText
                android:layout_marginLeft="100dp"
                android:layout_width="match_parent"
                android:inputType="number"
                android:layout_height="match_parent"
                android:background="@null"
                android:id="@+id/et_id_bankcard"
                android:gravity="center_vertical"
                android:hint="请输入银行卡号"
                android:textSize="@dimen/text_size_15"/>
        </FrameLayout>

        <View
            android:background="@color/grayE0E0E0"
            android:layout_width="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_height="@dimen/line_height"/>

        <FrameLayout
            android:paddingLeft="15dp"
            android:layout_width="match_parent"
            android:layout_height="51dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="手机号"
                android:textSize="@dimen/text_size_15"
                android:gravity="center_vertical"/>
            <EditText
                android:layout_marginLeft="100dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:inputType="number"
                android:id="@+id/et_id_phone"
                android:gravity="center_vertical"
                android:hint="请输入手机号"
                android:textSize="@dimen/text_size_15"/>
        </FrameLayout>
        <View
            android:background="@color/grayE0E0E0"
            android:layout_width="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_height="@dimen/line_height"/>

        <FrameLayout
            android:paddingLeft="15dp"
            android:layout_width="match_parent"
            android:layout_height="51dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="验证码"
                android:textSize="@dimen/text_size_15"
                android:gravity="center_vertical"/>
            <EditText
                android:layout_marginLeft="100dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:id="@+id/et_id_code"
                android:inputType="number"
                android:gravity="center_vertical"
                android:hint="请输入验证码"
                android:textSize="@dimen/text_size_15"/>

            <TextView
                android:id="@+id/tv_noaudit_code"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_gravity="center_vertical|right"
                android:layout_marginRight="15dp"
                android:text="获取验证码"
                android:textColor="@color/green0ABE63"
                android:textSize="15sp" />
        </FrameLayout>
        <View
            android:background="@color/grayE0E0E0"
            android:layout_width="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_height="@dimen/line_height"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_marginTop="99dp"
        android:text="立即提交认证"
        android:layout_marginBottom="20dp"
        android:textSize="@dimen/text_size_18"
        android:gravity="center"
        android:textColor="@color/all_activity_FFFFFF"
        android:id="@+id/tv_commit_vertify_immediately"
        android:background="@drawable/tv_change_bg_gray"/>


        </LinearLayout>

    </ScrollView>

</FrameLayout>