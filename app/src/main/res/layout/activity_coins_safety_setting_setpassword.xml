<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/all_activity_FFFFFF">
    <include
        layout="@layout/title_layout"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:textColor="@color/black333333"
        android:textSize="@dimen/text_size_18"
        android:text="密码设置"
        android:id="@+id/tv_coins_safety_type"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="75dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:textColor="@color/grayB3B3B3"
        android:textSize="@dimen/text_size_14"
        android:id="@+id/tv_coins_safety_notice"
        android:layout_gravity="center_horizontal"
        android:text="请输入6位数字密码"
        android:layout_marginTop="7dp"/>


    <EditText
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:digits="1234567890"
        android:maxLength="6"
        android:inputType="number"
        android:cursorVisible="false"
        android:id="@+id/et_input_content"/>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        android:id="@+id/ll_intercept_event"
        android:layout_height="50dp"
        android:layout_marginTop="100dp">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/inputsixpassword"
            android:id="@+id/iv_input_content1"/>

        <View
            android:layout_width="10dp"
            android:layout_height="match_parent"/>

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/inputsixpassword"
            android:id="@+id/iv_input_content2"/>

        <View
            android:layout_width="10dp"
            android:layout_height="match_parent"/>

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/inputsixpassword"
            android:id="@+id/iv_input_content3"/>

        <View
            android:layout_width="10dp"
            android:layout_height="match_parent"/>

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/inputsixpassword"
            android:id="@+id/iv_input_content4"/>

        <View
            android:layout_width="10dp"
            android:layout_height="match_parent"/>

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/inputsixpassword"
            android:id="@+id/iv_input_content5"/>

        <View
            android:layout_width="10dp"
            android:layout_height="match_parent"/>

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/inputsixpassword"
            android:id="@+id/iv_input_content6"/>


    </LinearLayout>

    <View
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="28dp"
        android:layout_marginBottom="200dp"
        android:layout_marginRight="28dp"
        android:background="@drawable/re_solid_r25_gray"
        android:text="下一步"
        android:textSize="@dimen/text_size_18"
        android:gravity="center"
        android:id="@+id/tv_set_password_next_step"/>
</LinearLayout>