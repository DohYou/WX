<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/all_activity_FFFFFF"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:overScrollMode="never"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="92dp"
            android:elevation="4dp"
            android:layout_height="92dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="75dp"
            android:background="@drawable/re_solid_r6_white"/>
        <FrameLayout
            android:layout_marginTop="81.5dp"
            android:layout_marginLeft="54dp"
            android:layout_marginRight="54dp"
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <ImageView
                android:layout_gravity="center_vertical"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/login_phone" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="请输入手机号或汇集号"
                android:theme="@style/InputEditText"
                android:inputType="number"
                android:textColor="@color/black333333"
                android:id="@+id/et_register_phone"
                android:textSize="@dimen/text_size_14"
                android:paddingLeft="30dp"/>

        </FrameLayout>


        <FrameLayout
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/fl_register_code"
            android:layout_marginLeft="54dp"
            android:layout_marginRight="54dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/login_code"
                android:layout_gravity="center_vertical"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="请输入验证码"
                android:textColor="@color/black333333"
                android:paddingLeft="30dp"
                android:maxLength="8"
                android:id="@+id/et_register_code"
                android:textSize="@dimen/text_size_14"
                android:inputType="number"
                android:theme="@style/InputEditText"/>

            <TextView
                android:layout_gravity="right"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:textSize="@dimen/text_size_14"
                android:textColor="@color/green0ABE63"
                android:id="@+id/tv_register_get_code"
                android:gravity="center"
                android:layout_alignParentRight="true"
                android:text="获取验证码"/>

        </FrameLayout>
        <FrameLayout
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/fl_register_inviteid"
            android:layout_marginLeft="54dp"
            android:layout_marginRight="54dp">

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:background="@drawable/inviteid"
                android:layout_gravity="center_vertical"/>

            <EditText
                android:id="@+id/et_register_inviteid"
                android:layout_width="293dp"
                android:layout_height="match_parent"
                android:hint="邀请ID"
                android:inputType="number"
                android:maxLength="8"
                android:paddingLeft="30dp"
                android:textColor="@color/black333333"
                android:textSize="@dimen/text_size_14"
                android:theme="@style/InputEditText" />

            <TextView
                android:layout_gravity="right"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:textSize="@dimen/text_size_14"
                android:textColor="@color/grayD9D9D9"
                android:id="@+id/tv_register_choosewrite"
                android:gravity="center"
                android:layout_alignParentRight="true"
                android:text="选填"/>

        </FrameLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="54dp"
            android:layout_marginRight="54dp"
            android:layout_height="60dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="@dimen/text_size_14"
                android:textColor="@color/green0ABE63"
                android:layout_gravity="right"
                android:gravity="center"
                android:text="立即登录"
                android:id="@+id/tv_register_login_immediately"/>
        </FrameLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="55dp"
            android:layout_marginRight="55dp"
            android:layout_marginTop="29dp"
            android:background="@drawable/re_solid_r25_gray"
            android:text="登录"
            android:textSize="@dimen/text_size_18"
            android:gravity="center"
            android:id="@+id/tv_register_login"/>

    </LinearLayout>


</androidx.core.widget.NestedScrollView>