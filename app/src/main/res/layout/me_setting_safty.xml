<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/grayF5F5F5">

    <include
        layout="@layout/title_layout"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:orientation="horizontal"
        android:background="@color/all_activity_FFFFFF"
        android:id="@+id/me_setting1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_15"
            android:textColor="@color/black333333"
            android:text="设置登录密码"
            android:layout_gravity="center_vertical"
            android:paddingLeft="15dp"/>

        <ImageView
            android:layout_width="5dp"
            android:layout_height="10dp"
            android:background="@drawable/turn_right"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="10dp"/>

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:orientation="horizontal"
        android:background="@color/all_activity_FFFFFF"
        android:id="@+id/me_setting2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_15"
            android:textColor="@color/black333333"
            android:text="忘记登录密码"
            android:layout_gravity="center_vertical"
            android:paddingLeft="15dp"/>

        <ImageView
            android:layout_width="5dp"
            android:layout_height="10dp"
            android:background="@drawable/turn_right"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="10dp"/>

    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:background="@color/grayE0E0E0"
        android:paddingLeft="15dp"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:orientation="horizontal"
        android:background="@color/all_activity_FFFFFF"
        android:id="@+id/me_setting3">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_15"
            android:textColor="@color/black333333"
            android:text="我的手机号"
            android:layout_gravity="center_vertical"
            android:paddingLeft="15dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_15"
            android:textColor="@color/grayB3B3B3"
            android:text="175214451298"
            android:layout_gravity="center_vertical|right"
            android:paddingRight="15dp"
            android:id="@+id/tv_settingsafty_phone"/>



    </FrameLayout>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="92dp"
        android:orientation="horizontal"
        android:background="@color/all_activity_FFFFFF"
        android:id="@+id/me_setting4"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_15"
            android:textColor="@color/black333333"
            android:text="锁屏密码"
            android:id="@+id/tv_me_setting_safty1"
            android:paddingLeft="15dp"
            android:layout_marginTop="15dp"/>

        <TextView
            android:layout_width="286dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_13"
            android:textColor="@color/grayB3B3B3"
            android:text="离开或锁定汇集云，再进入时需要使用密码解锁，开启后，默认关闭通知显示消息详情"
            android:id="@+id/tv_me_setting_safty2"
            android:layout_below="@id/tv_me_setting_safty1"
            android:paddingLeft="15dp"
            android:layout_marginTop="4dp"/>

        <ImageView
            android:layout_width="35dp"
            android:layout_height="25dp"
            android:background="@drawable/gray_lock"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:layout_alignParentRight="true"
            android:id="@+id/iv_mesettingsafty_off1"/>

        <ImageView
            android:layout_width="35dp"
            android:layout_height="25dp"
            android:background="@drawable/lockblue"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:visibility="gone"
            android:layout_alignParentRight="true"
            android:id="@+id/iv_mesettingsafty_on1"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:background="@color/grayE0E0E0"
        android:layout_marginLeft="15dp"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:orientation="horizontal"
        android:background="@color/all_activity_FFFFFF"
        android:id="@+id/me_setting5">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_15"
            android:textColor="@color/black333333"
            android:text="更改锁屏密码"
            android:layout_gravity="center_vertical"
            android:paddingLeft="15dp"/>

        <ImageView
            android:layout_width="5dp"
            android:layout_height="10dp"
            android:background="@drawable/turn_right"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="10dp"/>

    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:background="@color/grayE0E0E0"
        android:layout_marginLeft="15dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:orientation="horizontal"
        android:background="@color/all_activity_FFFFFF"
        android:id="@+id/me_setting6">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_15"
            android:textColor="@color/black333333"
            android:text="摇晃锁屏"
            android:id="@+id/tv_me_setting_safty3"
            android:paddingLeft="15dp"
            android:layout_marginTop="15dp"/>

        <TextView
            android:layout_width="286dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_13"
            android:textColor="@color/grayB3B3B3"
            android:text="摇晃手机锁定汇集云"
            android:id="@+id/tv_me_setting_safty4"
            android:layout_below="@id/tv_me_setting_safty3"
            android:paddingLeft="15dp"
            android:layout_marginTop="4dp"/>

        <ImageView
            android:layout_width="35dp"
            android:layout_height="25dp"
            android:background="@drawable/gray_lock"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:layout_alignParentRight="true"
            android:id="@+id/iv_mesettingsafty_off2"/>

        <ImageView
            android:layout_width="35dp"
            android:layout_height="25dp"
            android:background="@drawable/lockblue"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:visibility="gone"
            android:layout_alignParentRight="true"
            android:id="@+id/iv_mesettingsafty_on2"/>

    </RelativeLayout>

</LinearLayout>