<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    android:background="@color/all_line_bg"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <FrameLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="50dp">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:src="@drawable/turn_left"
            android:padding="16dp"
            android:id="@+id/iv_no_friend_return"/>

        <ImageView
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:id="@+id/iv_diandian"
            android:src="@drawable/diandiandian"
            android:layout_gravity="right"
            android:padding="16dp"/>


    </FrameLayout>

    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingTop="30dp"
        android:paddingBottom="30dp"
        android:id="@+id/rl_fragment_me_header_personal"
        android:background="@color/all_activity_FFFFFF">

        <com.ylr.hyy.utils.RoundImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:round_topRight="40dp"
            app:round_topLeft="40dp"
            app:round_bottomRight="40dp"
            app:round_bottomLeft="40dp"
            app:round_type="0"
            android:id="@+id/riv_no_friend_head"/>

        <TextView
            android:id="@+id/tv_no_friend_name"
            android:maxLength="8"
            android:ellipsize="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/riv_no_friend_head"
            android:textColor="@color/black333333"
            android:textSize="@dimen/text_size_19"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_13"
            android:id="@+id/tv_no_friend_id"
            android:layout_below="@+id/tv_no_friend_name"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/riv_no_friend_head"
            android:gravity="center_vertical"/>

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:background="@drawable/female"
            android:layout_toRightOf="@id/tv_no_friend_name"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="5dp"
            android:id="@+id/iv_no_friend_sex"/>

        <ImageView
            android:layout_width="18dp"
            android:layout_height="22dp"
            android:background="@drawable/changedmember1"
            android:layout_toRightOf="@id/iv_no_friend_sex"
            android:layout_marginLeft="6dp"
            android:id="@+id/iv_member1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:layout_toRightOf="@id/iv_member1"
            android:id="@+id/tv_no_friend_vip_lv"
            android:textSize="@dimen/text_size_11"
            android:textColor="@color/blue81CBFF"
            android:text="普通用户"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="1dp"/>

    </RelativeLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="添加好友"
        android:id="@+id/tv_no_friend_add"
        android:textSize="@dimen/text_size_15"
        android:textColor="@color/blue5D6F94"
        android:layout_marginTop="10dp"
        android:background="@color/white"/>

</LinearLayout>