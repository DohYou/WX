<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:background="@color/white"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/all_activity_FFFFFF">

        <ImageView
            android:layout_width="44dp"
            android:layout_height="match_parent"
            android:src="@drawable/turn_left"
            android:padding="12dp"
            android:id="@+id/iv_changename_back"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/black333333"
            android:textSize="@dimen/text_size_17"
            android:text="发起群聊"
            android:gravity="center"/>

        <TextView
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:textSize="@dimen/text_size_15"
            android:textColor="@color/all_activity_FFFFFF"
            android:background="@drawable/re_solid_r3_purple"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="15dp"
            android:text="确定"
            android:id="@+id/tv_changename_save"
            android:gravity="center"/>

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:background="@drawable/re_solid_r18_gray"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:layout_height="40dp">

        <ImageView
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="12dp"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:background="@drawable/goodfriend_find"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:layout_marginLeft="40dp"
            android:textSize="@dimen/text_size_13"
            android:textColor="@color/black333333"
            android:id="@+id/et_create_search"/>


    </FrameLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="分类"
        android:textSize="@dimen/text_size_17"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="16dp"
        android:textColor="@color/black333333"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="6dp"
        android:layout_marginRight="10dp"
        android:overScrollMode="never"
        android:id="@+id/rv_create_sort"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/all_line_bg"
        android:layout_marginTop="6dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="6dp"
        android:overScrollMode="never"
        android:id="@+id/rv_create_select"/>


    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/all_line_bg"
        android:layout_marginTop="6dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="好友列表"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_marginLeft="15dp"
        android:textSize="@dimen/text_size_17"
        android:textColor="@color/black333333"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">


        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:overScrollMode="never"
            android:id="@+id/rv_create_list"/>


        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|right"
            android:overScrollMode="never"
            android:id="@+id/rv_create_tag"/>
    </FrameLayout>

</LinearLayout>