<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_marginBottom="60dp"
        android:orientation="vertical"
        android:background="@color/grayF5F5F5">

        <include
            layout="@layout/title_layout"/>

        <FrameLayout
            android:background="@color/all_activity_FFFFFF"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:id="@+id/me_details_1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="头像"
                android:textSize="@dimen/text_size_15"
                android:textColor="@color/black333333"
                android:layout_gravity="center_vertical"/>
            <ImageView
                android:layout_width="5dp"
                android:layout_height="10dp"
                android:background="@drawable/turn_right"
                android:layout_gravity="right|center_vertical"/>
            <com.ylr.hyy.utils.RoundImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:round_type="0"
                app:round_bottomLeft="25dp"
                app:round_bottomRight="25dp"
                app:round_topLeft="25dp"
                app:round_topRight="25dp"
                android:id="@+id/riv_me_details_head"
                android:layout_gravity="center_vertical|right"
                android:layout_marginRight="30dp"/>
        </FrameLayout>

        <FrameLayout
            android:background="@color/all_activity_FFFFFF"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:id="@+id/me_details_2">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="昵称"
                android:textSize="@dimen/text_size_15"
                android:textColor="@color/black333333"
                android:layout_gravity="center_vertical"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_15"
                android:id="@+id/tv_me_details_name"
                android:textColor="@color/gray999999"
                android:layout_gravity="right|center_vertical"
                android:layout_marginRight="14dp"/>

            <ImageView
                android:layout_width="5dp"
                android:layout_height="10dp"
                android:background="@drawable/turn_right"
                android:layout_gravity="right|center_vertical"/>
        </FrameLayout>

        <FrameLayout
            android:background="@color/all_activity_FFFFFF"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:id="@+id/me_details_3">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="电话"
                android:textSize="@dimen/text_size_15"
                android:textColor="@color/black333333"
                android:layout_gravity="center_vertical"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_15"
                android:id="@+id/tv_me_details_phone"
                android:textColor="@color/gray999999"
                android:layout_gravity="right|center_vertical"
                android:layout_marginRight="14dp"/>

            <ImageView
                android:layout_width="5dp"
                android:layout_height="10dp"
                android:background="@drawable/turn_right"
                android:layout_gravity="right|center_vertical"/>
        </FrameLayout>

        <FrameLayout
            android:background="@color/all_activity_FFFFFF"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:id="@+id/me_details_4">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="汇集账号"
                android:textSize="@dimen/text_size_15"
                android:textColor="@color/black333333"
                android:layout_gravity="center_vertical"/>

            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/tv_me_details_huiji_code"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_15"
                android:textColor="@color/gray999999"
                android:layout_gravity="right|center_vertical"
                android:layout_marginRight="14dp"/>

            <ImageView
                android:layout_width="5dp"
                android:layout_height="10dp"
                android:background="@drawable/turn_right"
                android:layout_gravity="right|center_vertical"/>
        </FrameLayout>

        <FrameLayout
            android:background="@color/all_activity_FFFFFF"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:id="@+id/me_details_5">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的二维码"
                android:textSize="@dimen/text_size_15"
                android:textColor="@color/black333333"
                android:layout_gravity="center_vertical"/>

            <ImageView
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:layout_gravity="right|center_vertical"
                android:background="@drawable/weima"
                android:layout_marginRight="14dp"/>

            <ImageView
                android:layout_width="5dp"
                android:layout_height="10dp"
                android:background="@drawable/turn_right"
                android:layout_gravity="right|center_vertical"/>
        </FrameLayout>

        <FrameLayout
            android:background="@color/all_activity_FFFFFF"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:id="@+id/me_details_6">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="性别"
                android:textSize="@dimen/text_size_15"
                android:textColor="@color/black333333"
                android:layout_gravity="center_vertical"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_15"
                android:id="@+id/tv_me_details_sex"
                android:textColor="@color/gray999999"
                android:layout_gravity="right|center_vertical"
                android:layout_marginRight="14dp"/>

            <ImageView
                android:layout_width="5dp"
                android:layout_height="10dp"
                android:background="@drawable/turn_right"
                android:layout_gravity="right|center_vertical"/>
        </FrameLayout>

        <FrameLayout
            android:background="@color/all_activity_FFFFFF"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:id="@+id/me_details_7">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="个性签名"
                android:textSize="@dimen/text_size_15"
                android:textColor="@color/black333333"
                android:layout_gravity="center_vertical"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_15"
                android:maxLength="10"
                android:id="@+id/tv_me_details_sign"
                android:ellipsize="end"
                android:textColor="@color/gray999999"
                android:layout_gravity="right|center_vertical"
                android:layout_marginRight="14dp"/>

            <ImageView
                android:layout_width="5dp"
                android:layout_height="10dp"
                android:background="@drawable/turn_right"
                android:layout_gravity="right|center_vertical"/>
        </FrameLayout>

        <FrameLayout
            android:background="@color/all_activity_FFFFFF"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:id="@+id/me_details_8">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="当前地区"
                android:textSize="@dimen/text_size_15"
                android:textColor="@color/black333333"
                android:layout_gravity="center_vertical"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_me_details_address"
                android:textSize="@dimen/text_size_15"
                android:textColor="@color/gray999999"
                android:layout_gravity="right|center_vertical"
                android:layout_marginRight="14dp"/>

            <ImageView
                android:layout_width="5dp"
                android:layout_height="10dp"
                android:background="@drawable/turn_right"
                android:layout_gravity="right|center_vertical"/>
        </FrameLayout>
    </LinearLayout>

</androidx.core.widget.NestedScrollView>