<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/all_activity_FFFFFF">

    <include
       layout="@layout/title_layout"/>
    
    <TextView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:textColor="@color/grayB3B3B3"
        android:textSize="@dimen/text_size_13"
        android:background="@color/all_activity_FFFFFF"
        android:gravity="center"
        android:id="@+id/tv_nowphonenum"/>


    <FrameLayout
        android:paddingLeft="28dp"
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:background="@color/all_activity_FFFFFF">
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/login_phone"
            android:layout_gravity="center_vertical"/>
        <EditText
            android:inputType="number"
            android:layout_marginLeft="30dp"
            android:digits="1234567890"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:maxLength="11"
            android:gravity="center_vertical"
            android:hint="请输入手机号"
            android:textSize="@dimen/text_size_15"
            android:id="@+id/et_change_originalphone"/>
    </FrameLayout>
    <View
        android:background="@color/grayE0E0E0"
        android:layout_width="match_parent"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_height="@dimen/line_height"/>

    <FrameLayout
        android:paddingLeft="28dp"
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:id="@+id/fl_change_phone_getcode"
        android:background="@color/all_activity_FFFFFF">
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/login_code"
            android:layout_gravity="center_vertical" />
        <EditText
            android:layout_marginLeft="30dp"
            android:layout_width="match_parent"
            android:inputType="number"
            android:digits="1234567890"
            android:layout_height="match_parent"
            android:id="@+id/et_changephone_code"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="请输入验证码"
            android:textSize="@dimen/text_size_15"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="获取验证码"
                android:layout_gravity="right"
                android:layout_marginRight="15dp"
                android:textSize="@dimen/text_size_15"
                android:textColor="@color/green0ABE63"
                android:gravity="center"
                android:layout_centerInParent="true"
                android:id="@+id/tv_changephone_getCode"/>

    </FrameLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_marginLeft="27dp"
        android:layout_height="50dp"
        android:textSize="@dimen/text_size_15"
        android:textColor="@color/all_activity_FFFFFF"
        android:background="@drawable/re_solid_r25_purple"
        android:layout_gravity="right|center_vertical"
        android:layout_marginRight="27dp"
        android:text="确定"
        android:layout_marginTop="78dp"
        android:gravity="center"
        android:id="@+id/tv_changephone_save"/>

</LinearLayout>

