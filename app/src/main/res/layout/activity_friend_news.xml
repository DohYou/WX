<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    android:background="@color/all_line_bg"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <FrameLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:src="@drawable/turn_left"
            android:padding="16dp"
            android:id="@+id/iv_friend_news_return"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_17"
            android:textColor="@color/black333333"
            android:layout_gravity="center"
            android:text="用户资料"/>

        <ImageView
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:src="@drawable/diandiandian"
            android:padding="16dp"
            android:layout_gravity="right"
            android:id="@+id/iv_friend_news_dian"/>

    </FrameLayout>

    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingTop="30dp"
        android:paddingBottom="30dp"
        android:id="@+id/rl_fragment_me_header_personal"
        android:background="@color/all_activity_FFFFFF">

        <com.ylr.hyy.utils.RoundImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:round_topRight="40dp"
            app:round_topLeft="40dp"
            app:round_bottomRight="40dp"
            app:round_bottomLeft="40dp"
            app:round_type="0"
            android:id="@+id/riv_no_friend_head"/>

        <TextView
            android:id="@+id/tv_no_friend_name"
            android:maxLength="8"
            android:ellipsize="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/riv_no_friend_head"
            android:textColor="@color/black333333"
            android:textSize="@dimen/text_size_19"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_13"
            android:id="@+id/tv_no_friend_id"
            android:layout_below="@+id/tv_no_friend_name"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/riv_no_friend_head"
            android:gravity="center_vertical"/>

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:background="@drawable/female"
            android:layout_toRightOf="@id/tv_no_friend_name"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="5dp"
            android:id="@+id/iv_no_friend_sex"/>

        <ImageView
            android:layout_width="18dp"
            android:layout_height="22dp"
            android:background="@drawable/changedmember1"
            android:layout_toRightOf="@id/iv_no_friend_sex"
            android:layout_marginLeft="6dp"
            android:id="@+id/iv_member1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:layout_toRightOf="@id/iv_member1"
            android:id="@+id/tv_no_friend_vip_lv"
            android:textSize="@dimen/text_size_11"
            android:textColor="@color/blue81CBFF"
            android:text="普通用户"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="1dp"/>

    </RelativeLayout>

    <FrameLayout
        android:id="@+id/fl_friend_news_set_beizhu"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_marginTop="10dp"
        android:paddingLeft="15dp"
        android:layout_height="51dp">

        <TextView
            android:id="@+id/tv_friend_beizhu"
            android:layout_width="match_parent"
            android:layout_marginRight="60dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="设置标签"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="@color/black333333"
            android:textSize="@dimen/text_size_15"/>


        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="20dp"
            android:src="@drawable/turn_right_smaller"
            android:layout_gravity="right|center_vertical"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_height"
            android:layout_gravity="bottom"
            android:layout_marginRight="15dp"
            android:background="@color/all_line_bg" />

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:paddingLeft="15dp"
        android:background="@color/white"
        android:layout_height="50dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="转换为  好友/客户"
            android:textColor="@color/black333333"
            android:textSize="@dimen/text_size_15"/>

        <ImageView
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:src="@drawable/turn_down_smaller"
            android:layout_gravity="right"
            android:padding="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="60dp"
            android:textSize="@dimen/text_size_15"
            android:textColor="@color/grayB3B3B3"
            android:text="点击切换"/>


    </FrameLayout>

    <FrameLayout
        android:id="@+id/fl_friend_news_set_friend"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:paddingLeft="15dp"
        android:layout_height="50dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="好友"
            android:textColor="@color/gray787878"
            android:textSize="@dimen/text_size_14"/>


        <ImageView
            android:id="@+id/iv_friend_news_set_friend"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="18dp"
            android:src="@drawable/topup_no_check"
            android:layout_gravity="right|center_vertical"/>

    </FrameLayout>

    <FrameLayout
        android:id="@+id/fl_friend_news_set_customer"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:paddingLeft="15dp"
        android:layout_height="51dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="客户"
            android:textColor="@color/gray787878"
            android:textSize="@dimen/text_size_15"/>


        <ImageView
            android:id="@+id/iv_friend_news_set_customer"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="18dp"
            android:src="@drawable/topup_no_check"
            android:layout_gravity="right|center_vertical"/>

    </FrameLayout>

    <FrameLayout
        android:id="@+id/fl_friend_news_see_pengyouquan"
        android:paddingLeft="15dp"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_marginTop="10dp"
        android:layout_height="51dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="朋友圈"
            android:textSize="@dimen/text_size_15"
            android:textColor="@color/black333333"
            android:layout_gravity="center_vertical"/>


        <ImageView
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:src="@drawable/turn_right_smaller"
            android:padding="20dp"
            android:layout_gravity="right"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_marginLeft="60dp"
            android:orientation="horizontal"
            android:id="@+id/ll_friend_news_content"
            android:layout_height="match_parent"/>


        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_height"
            android:layout_marginRight="15dp"
            android:layout_gravity="bottom"
            android:background="@color/all_line_bg"/>



    </FrameLayout>

    <FrameLayout
        android:id="@+id/fl_friend_news_all"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:paddingLeft="15dp"
        android:layout_height="50dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="更多信息"
            android:textColor="@color/black333333"
            android:textSize="@dimen/text_size_15"/>


        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="20dp"
            android:src="@drawable/turn_right_smaller"
            android:layout_gravity="right|center_vertical"/>


    </FrameLayout>
    
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="20dp"
        android:id="@+id/tv_friend_news_send"
        android:text="发送消息"
        android:background="@drawable/re_solid_r25_blue"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_16"/>


</LinearLayout>